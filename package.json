{
  "name": "auto-config-js",
  "version": "0.0.0",
  "description": "Hierarchical NodeJS configuration with Yaml files, environment variables and config merging.",
  "main": "lib/autoConfig.js",
  "repository": "otaciliolacerda/auto-config-js",
  "homepage": "https://github.com/otaciliolacerda/auto-config-js#readme",
  "keywords": [
    "configuration",
    "environment",
    "config",
    "yaml",
    "auto-configuration"
  ],
  "author": "otaciliolacerda",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/otaciliolacerda/auto-config-js/issues"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-sonarjs": "^0.6.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "pinst": "^2.0.0",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "js-yaml": "^4.0.0"
  },
  "scripts": {
    "example": "node ./example",
    "test": "jest",
    "lint": "eslint --fix './lib/**/*.js' './test/**/*.js'",
    "release": "yarn publish",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "engines": {
    "node": ">=12.13"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": -15
      }
    }
  },
  "resolutions": {
    "lodash": "^4.17.19"
  }
}
